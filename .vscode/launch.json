{
    "version": "0.2.0",
    "configurations": [{

            "name": "Launch chromium-browser  against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "${workspaceRoot}/index.html",
            "webRoot": "${workspaceRoot}",
            "runtimeExecutable": "/usr/bin/chromium-browser"

        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}